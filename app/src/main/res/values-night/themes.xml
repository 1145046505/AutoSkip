<resources>
    <bool name="is_night_mode">true</bool>
    <!-- Base application theme. -->
    <style name="Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="colorTopBarTint">?android:colorBackground</item>
        <item name="colorTestBackground">?colorBackgroundFloating</item>
    </style>

    <style name="Base.Automator.Scrim">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>